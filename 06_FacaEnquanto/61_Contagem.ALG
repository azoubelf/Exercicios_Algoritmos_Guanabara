Algoritmo "Contagem"

Var
// Seção de Declarações das variáveis 
   i: inteiro

Inicio
// Seção de Comandos, procedimento, funções, operadores, etc... 
   escreval()

   i <- 0

   repita
      escreva(i, " ")
      i <- i + 3
   ate i > 30

   escreva("Acabou!")
   escreval()
   
Fimalgoritmo